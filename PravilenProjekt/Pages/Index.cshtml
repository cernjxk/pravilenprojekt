@page
@model PravilenProjekt.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
        
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong> Uspeh!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 mb-2"> Katalog Videoiger</h1>
            <p class="lead text-muted">Pregled vseh razpoložljivih iger</p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var game in Model.Games)
        {
            <div class="col">
                <div class="card h-100 shadow-sm hover-card">
                    <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 300px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@game.Title</h5>
                            <span class="badge bg-warning text-dark">
                                ⭐ @game.Rating
                            </span>
                        </div>

                        <p class="text-muted mb-2">
                            <small>
                                <span class="badge bg-secondary me-1">@game.Genre</span>
                                <span class="badge bg-info">@game.Platform</span>
                            </small>
                        </p>

                        <p class="text-muted mb-3">
                            <small>Leto: @game.ReleaseYear</small>
                        </p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h4 mb-0 text-primary">
                                    €@game.Price.ToString("F2")
                                </span>
                                <button class="btn btn-sm btn-outline-primary">
                                    Več info
                                </button>
                                <div class="d-flex gap-2 mt-auto">
                                    <span class="h4 mb-0 text-primary flex-grow-1">
                                        €@game.Price.ToString("F2")
                                    </span>
                                    <a asp-page="./Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning">
                                        ✏️ Uredi
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<hr />
<div class="container my-5">
    <h2>🕹️ Moj osebni seznam iger</h2>

    <!-- Temni / svetli način -->
    <button id="themeToggle" class="btn btn-outline-secondary mb-3">
        Preklopi temo (dark / light)
    </button>

    <!-- Forma za dodajanje igre -->
    <form id="gameForm" class="mb-4">
        <div class="mb-2">
            <label class="form-label">Naslov</label>
            <input type="text" id="gameTitle" class="form-control" required>
        </div>

        <div class="mb-2">
            <label class="form-label">Žanr</label>
            <input type="text" id="gameGenre" class="form-control">
        </div>

        <div class="mb-2">
            <label class="form-label">Ocena (1–10)</label>
            <input type="number" id="gameRating" class="form-control" min="1" max="10">
        </div>

        <button type="submit" class="btn btn-primary">Dodaj igro</button>
    </form>

    <!-- Razvrščanje -->
    <label class="form-label">Razvrsti po:</label>
    <select id="sortSelect" class="form-select w-auto mb-3">
        <option value="none">Brez razvrščanja</option>
        <option value="title">Naslov</option>
        <option value="rating">Ocena</option>
    </select>

    <!-- Tabela iger -->
    <table id="gamesTable" class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Naslov</th>
                <th>Žanr</th>
                <th>Ocena</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
        }
</style>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }
</style>

<style>
    body.dark-mode {
        background-color: #111 !important;
        color: #f5f5f5 !important;
    }

    body.dark-mode .card {
        background-color: #222 !important;
        color: #eee !important;
    }

    body.dark-mode table {
        background-color: #222 !important;
        color: #fff !important;
    }

    body.dark-mode input,
    body.dark-mode select {
        background-color: #333 !important;
        color: #fff !important;
        border: 1px solid #666 !important;
    }
</style>

@section Scripts {
    <script>
        // Dark mode toggle
        document.getElementById("darkToggleBtn").addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
        });

        // Sortiranje (client-side)
        document.getElementById("sortSelect").addEventListener("change", function () {
            alert("Tu bo sortiranje (demo) – lahko kasneje dodava pravo logiko.");
        });

        // Dodaj komentar
        document.getElementById("addCommentBtn").addEventListener("click", function () {
            let text = document.getElementById("commentInput").value;
            if (text.trim() === "") return;

            let li = document.createElement("li");
            li.className = "list-group-item";
            li.textContent = text;

            document.getElementById("commentList").appendChild(li);
            document.getElementById("commentInput").value = "";
        });
    </script>
}
