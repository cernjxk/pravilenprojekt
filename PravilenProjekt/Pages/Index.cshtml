@page
@model PravilenProjekt.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>✅ Uspeh!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-4 mb-2">🎮 Katalog Videoiger</h1>
                    <p class="lead text-muted">Pregled vseh razpoložljivih iger</p>
                </div>
                <a asp-page="./Create" class="btn btn-success btn-lg">
                    ➕ Dodaj novo igro
                </a>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <form method="get" class="mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row g-3">
                    <!-- Search -->
                    <div class="col-md-12">
                        <label class="form-label fw-bold">🔍 Iskanje po naslovu</label>
                        <input type="text" 
                               name="SearchQuery" 
                               value="@Model.SearchQuery" 
                               class="form-control" 
                               placeholder="Vnesite naslov igre...">
                    </div>

                    <!-- Genre Filter -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">🎭 Žanr</label>
                        <select name="GenreFilter" class="form-select">
                            <option value="">Vsi žanri</option>
                            @foreach (var genre in Model.AvailableGenres)
                            {
                                <option value="@genre" selected="@(Model.GenreFilter == genre)">
                                    @genre
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Platform Filter -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">🎮 Platforma</label>
                        <select name="PlatformFilter" class="form-select">
                            <option value="">Vse platforme</option>
                            @foreach (var platform in Model.AvailablePlatforms)
                            {
                                <option value="@platform" selected="@(Model.PlatformFilter == platform)">
                                    @platform
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Top Rated Toggle -->
                    <div class="col-12">
                        <div class="form-check form-switch">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   name="ShowTopRated" 
                                   value="true" 
                                   id="topRatedToggle"
                                   checked="@Model.ShowTopRated">
                            <label class="form-check-label fw-bold" for="topRatedToggle">
                                ⭐ Prikaži samo najbolje ocenjene (9.0+)
                                @if (Model.GetTopRatedCount() > 0)
                                {
                                    <span class="badge bg-warning text-dark">@Model.GetTopRatedCount() iger</span>
                                }
                            </label>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                🔍 Filtriraj
                            </button>
                            @if (Model.HasActiveFilters())
                            {
                                <a asp-page="./Index" class="btn btn-outline-secondary">
                                    ❌ Počisti vse filtre
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Active Filters Info -->
    @if (Model.HasActiveFilters())
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center" role="alert">
            <div>
                <strong>🎯 Aktivni filtri:</strong>
                @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
                {
                    <span class="badge bg-primary me-1">Iskanje: @Model.SearchQuery</span>
                }
                @if (!string.IsNullOrWhiteSpace(Model.GenreFilter))
                {
                    <span class="badge bg-success me-1">Žanr: @Model.GenreFilter</span>
                }
                @if (!string.IsNullOrWhiteSpace(Model.PlatformFilter))
                {
                    <span class="badge bg-info me-1">Platforma: @Model.PlatformFilter</span>
                }
                @if (Model.ShowTopRated)
                {
                    <span class="badge bg-warning text-dark me-1">⭐ Najbolje ocenjene (9.0+)</span>
                }
            </div>
            <span class="badge bg-dark">@Model.Games.Count rezultatov</span>
        </div>
    }

    <!-- No Results -->
    @if (!Model.Games.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <h4>😕 Ni rezultatov</h4>
            <p>Ni najdenih iger z izbranimi filtri.</p>
            <a asp-page="./Index" class="btn btn-primary">Prikaži vse igre</a>
        </div>
    }

    <!-- Games Cards -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var game in Model.Games)
        {
            <div class="col">
                <div class="card h-100 shadow-sm hover-card @(game.Rating >= 9.0 ? "border-warning border-3" : "")">
                    @if (game.Rating >= 9.0)
                    {
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-warning text-dark fs-6">
                                🏆 TOP RATED
                            </span>
                        </div>
                    }
                    <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 300px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@game.Title</h5>
                            <span class="badge bg-warning text-dark">
                                ⭐ @game.Rating
                            </span>
                        </div>

                        <p class="text-muted mb-2">
                            <small>
                                <span class="badge bg-secondary me-1">@game.Genre</span>
                                <span class="badge bg-info">@game.Platform</span>
                            </small>
                        </p>

                        <p class="text-muted mb-3">
                            <small>Leto: @game.ReleaseYear</small>
                        </p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h4 mb-0 text-primary">
                                    €@game.Price.ToString("F2")
                                </span>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-page="./Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning flex-fill">
                                    ✏️ Uredi
                                </a>
                                <a asp-page="./Delete" asp-route-id="@game.Id" class="btn btn-sm btn-danger flex-fill">
                                    🗑️ Izbriši
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<hr />

<!-- MOJ OSEBNI SEZNAM IGER + SORT + DARK MODE -->
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Moj osebni seznam iger</h2>
        <button id="themeToggle" class="btn btn-outline-secondary">
            Preklopi temo (dark / light)
        </button>
    </div>

    <!-- Forma za dodajanje igre -->
    <form id="gameForm" class="mb-4">
        <div class="row g-2">
            <div class="col-md-4">
                <label class="form-label">Naslov</label>
                <input type="text" id="gameTitle" class="form-control" required />
            </div>
            <div class="col-md-4">
                <label class="form-label">Žanr</label>
                <input type="text" id="gameGenre" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Ocena (1–10)</label>
                <input type="number" id="gameRating" class="form-control" min="1" max="10" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Dodaj igro</button>
            </div>
        </div>

        <!-- URL do uradne strani / trgovine -->
        <div class="row g-2 mt-2">
            <div class="col-md-6">
                <label class="form-label">Povezava (URL na uradno stran / trgovino)</label>
                <input type="url" id="gameWebsite" class="form-control" placeholder="https://store.steampowered.com/..." />
            </div>
        </div>
    </form>

    <!-- Razvrščanje -->
    <div class="mb-3">
        <label class="form-label">Razvrsti po:</label>
        <select id="sortSelect" class="form-select w-auto">
            <option value="none">Brez razvrščanja</option>
            <option value="title">Naslov</option>
            <option value="rating">Ocena</option>
        </select>
    </div>

    <!-- Tabela iger -->
    <table id="gamesTable" class="table table-striped">
        <thead>
            <tr>
                <th>Naslov</th>
                <th>Žanr</th>
                <th>Ocena</th>
                <th>Povezava</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            <!-- JavaScript bo dodal vrstice -->
        </tbody>
    </table>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }

    /* DARK MODE ZA CELOTNO STRAN */
    body.dark-mode {
        background-color: #121212 !important;
        color: #f5f5f5 !important;
    }

    body.dark-mode .card {
        background-color: #1e1e1e !important;
        color: #f5f5f5 !important;
    }

    body.dark-mode .table {
        background-color: #1e1e1e !important;
        color: #f5f5f5 !important;
    }

    body.dark-mode .form-control,
    body.dark-mode .form-select {
        background-color: #333 !important;
        color: #f5f5f5 !important;
        border-color: #555 !important;
    }
</style>

<!-- Modal za podrobni pogled igre -->
<div class="modal fade" id="gameDetailsModal" tabindex="-1" aria-labelledby="gameDetailsLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="gameDetailsLabel">Podrobnosti igre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zapri"></button>
            </div>
            <div class="modal-body">
                <p><strong>Naslov:</strong> <span id="detailsTitle"></span></p>
                <p><strong>Žanr:</strong> <span id="detailsGenre"></span></p>
                <p><strong>Ocena:</strong> <span id="detailsRating"></span></p>
                <p>
                    <strong>Povezava:</strong>
                    <a id="detailsWebsite" href="#" target="_blank">Odpri stran</a>
                    <span id="detailsWebsiteNone" class="text-muted" style="display:none;">Ni dodane povezave.</span>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const themeToggleBtn = document.getElementById("themeToggle");
            const gameForm = document.getElementById("gameForm");
            const gameTitleInput = document.getElementById("gameTitle");
            const gameGenreInput = document.getElementById("gameGenre");
            const gameRatingInput = document.getElementById("gameRating");
            const gameWebsiteInput = document.getElementById("gameWebsite");
            const sortSelect = document.getElementById("sortSelect");
            const gamesTableBody = document.querySelector("#gamesTable tbody");

            if (!gameForm || !themeToggleBtn || !gamesTableBody) {
                return;
            }

            function loadTheme() {
                const saved = localStorage.getItem("theme");
                if (saved === "dark") {
                    document.body.classList.add("dark-mode");
                } else {
                    document.body.classList.remove("dark-mode");
                }
            }

            themeToggleBtn.addEventListener("click", function () {
                document.body.classList.toggle("dark-mode");
                const isDark = document.body.classList.contains("dark-mode");
                localStorage.setItem("theme", isDark ? "dark" : "light");
            });

            let games = [];

            function loadGames() {
                const data = localStorage.getItem("personalGames");
                if (data) {
                    games = JSON.parse(data);
                } else {
                    games = [];
                }
            }

            function saveGames() {
                localStorage.setItem("personalGames", JSON.stringify(games));
            }

            function openDetails(game) {
                document.getElementById("detailsTitle").textContent = game.title;
                document.getElementById("detailsGenre").textContent = game.genre || "/";
                document.getElementById("detailsRating").textContent = game.rating != null ? game.rating : "/";

                const linkEl = document.getElementById("detailsWebsite");
                const noneEl = document.getElementById("detailsWebsiteNone");

                if (game.website) {
                    linkEl.href = game.website;
                    linkEl.style.display = "inline";
                    noneEl.style.display = "none";
                } else {
                    linkEl.href = "#";
                    linkEl.style.display = "none";
                    noneEl.style.display = "inline";
                }

                if (window.bootstrap) {
                    const modalEl = document.getElementById("gameDetailsModal");
                    const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
                    modal.show();
                } else {
                    alert(`Naslov: ${game.title}\nŽanr: ${game.genre}\nOcena: ${game.rating ?? ""}\nPovezava: ${game.website ?? ""}`);
                }
            }

            function renderGames() {
                gamesTableBody.innerHTML = "";

                let sorted = [...games];
                const sortBy = sortSelect.value;

                if (sortBy === "title") {
                    sorted.sort((a, b) => a.title.localeCompare(b.title));
                } else if (sortBy === "rating") {
                    sorted.sort((a, b) => (b.rating ?? 0) - (a.rating ?? 0)).reverse();
                }

                sorted.forEach(game => {
                    const tr = document.createElement("tr");

                    const tdTitle = document.createElement("td");
                    tdTitle.textContent = game.title;
                    tr.appendChild(tdTitle);

                    const tdGenre = document.createElement("td");
                    tdGenre.textContent = game.genre || "";
                    tr.appendChild(tdGenre);

                    const tdRating = document.createElement("td");
                    tdRating.textContent = game.rating != null ? game.rating : "";
                    tr.appendChild(tdRating);

                    const tdWebsite = document.createElement("td");
                    if (game.website) {
                        const a = document.createElement("a");
                        a.href = game.website;
                        a.target = "_blank";
                        a.textContent = "Odpri";
                        tdWebsite.appendChild(a);
                    } else {
                        tdWebsite.innerHTML = '<span class="text-muted">Ni povezave</span>';
                    }
                    tr.appendChild(tdWebsite);

                    const tdActions = document.createElement("td");

                    const detailsBtn = document.createElement("button");
                    detailsBtn.className = "btn btn-sm btn-outline-secondary me-2";
                    detailsBtn.textContent = "Podrobnosti";
                    detailsBtn.addEventListener("click", function () {
                        openDetails(game);
                    });
                    tdActions.appendChild(detailsBtn);

                    const deleteBtn = document.createElement("button");
                    deleteBtn.className = "btn btn-sm btn-danger";
                    deleteBtn.textContent = "Izbriši";
                    deleteBtn.addEventListener("click", function () {
                        games = games.filter(g => g.id !== game.id);
                        saveGames();
                        renderGames();
                    });
                    tdActions.appendChild(deleteBtn);

                    tr.appendChild(tdActions);

                    gamesTableBody.appendChild(tr);
                });
            }

            gameForm.addEventListener("submit", function (e) {
                e.preventDefault();

                const title = gameTitleInput.value.trim();
                if (!title) return;

                const genre = gameGenreInput.value.trim();
                const ratingStr = gameRatingInput.value;
                const rating = ratingStr ? parseInt(ratingStr, 10) : null;
                const website = gameWebsiteInput.value.trim();

                const newGame = {
                    id: Date.now(),
                    title: title,
                    genre: genre,
                    rating: rating,
                    website: website
                };

                games.push(newGame);
                saveGames();
                renderGames();

                gameTitleInput.value = "";
                gameGenreInput.value = "";
                gameRatingInput.value = "";
                gameWebsiteInput.value = "";
            });

            sortSelect.addEventListener("change", function () {
                renderGames();
            });

            loadTheme();
            loadGames();
            renderGames();
        });
    </script>
}