@page
@model PravilenProjekt.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong> Uspeh!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 mb-2"> Katalog Videoiger</h1>
            <p class="lead text-muted">Pregled vseh razpoložljivih iger</p>
        </div>
        <a asp-page="./Create" class="btn btn-primary btn-lg">
            ➕ Dodaj novo igro
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var game in Model.Games)
        {
            <div class="col">
                <div class="card h-100 shadow-sm hover-card">
                    <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 300px; object-fit: cover;">

                    <div class="card-body d-flex flex-column" data-game-id="@game.Id">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@game.Title</h5>
                            <span class="badge bg-warning text-dark">
                                ⭐ @game.Rating
                            </span>
                        </div>

                        <p class="text-muted mb-2">
                            <small>
                                <span class="badge bg-secondary me-1">@game.Genre</span>
                                <span class="badge bg-info">@game.Platform</span>
                            </small>
                        </p>

                        <p class="text-muted mb-3">
                            <small>Leto: @game.ReleaseYear</small>
                        </p>

                        <!-- ✅ KOMENTARJI (GameList-14) -->
                        <div class="mb-3">
                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary comment-toggle"
                                    data-game-id="@game.Id">
                                💬 Komentarji
                            </button>

                            <div class="comment-panel mt-2" id="comment-panel-@game.Id" style="display:none;">
                                <div class="mb-2">
                                    <textarea class="form-control comment-input"
                                          rows="2"
                                          placeholder="Napiši komentar..."></textarea>

                                    <button type="button"
                                            class="btn btn-sm btn-primary mt-2 comment-add"
                                            data-game-id="@game.Id">
                                        Dodaj komentar
                                    </button>
                                </div>

                                <ul class="list-group comment-list" id="comment-list-@game.Id">
                                    <!-- JS napolni -->
                                </ul>
                            </div>
                        </div>
                        <!-- ✅ KONEC KOMENTARJEV -->

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h4 mb-0 text-primary">
                                    €@game.Price.ToString("F2")
                                </span>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-page="./Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning flex-fill">
                                    ✏️ Uredi
                                </a>
                                <a asp-page="./Delete" asp-route-id="@game.Id" class="btn btn-sm btn-danger flex-fill">
                                    🗑️ Izbriši
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<hr />

<!-- MOJ OSEBNI SEZNAM IGER + SORT + DARK MODE -->
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Moj osebni seznam iger</h2>
        <button id="themeToggle" class="btn btn-outline-secondary">
            Preklopi temo (dark / light)
        </button>
    </div>

    <!-- Forma za dodajanje igre -->
    <form id="gameForm" class="mb-4">
        <div class="row g-2">
            <div class="col-md-4">
                <label class="form-label">Naslov</label>
                <input type="text" id="gameTitle" class="form-control" required />
            </div>
            <div class="col-md-4">
                <label class="form-label">Žanr</label>
                <input type="text" id="gameGenre" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Ocena (1–10)</label>
                <input type="number" id="gameRating" class="form-control" min="1" max="10" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Naslovnica (slika)</label>
                <input type="file" id="gameCover" class="form-control" accept="image/*" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Dodaj igro</button>
            </div>
        </div>

        <!-- NOVO: URL do uradne strani / trgovine -->
        <div class="row g-2 mt-2">
            <div class="col-md-6">
                <label class="form-label">Povezava (URL na uradno stran / trgovino)</label>
                <input type="url" id="gameWebsite" class="form-control" placeholder="https://store.steampowered.com/..." />
            </div>
        </div>
    </form>

    <!-- Razvrščanje -->
    <div class="mb-3">
        <label class="form-label">Razvrsti po:</label>
        <select id="sortSelect" class="form-select w-auto">
            <option value="none">Brez razvrščanja</option>
            <option value="title">Naslov</option>
            <option value="rating">Ocena</option>
        </select>
    </div>

    <!-- Tabela iger -->
    <table id="gamesTable" class="table table-striped">
        <thead>
            <tr>
                <th>Naslov</th>
                <th>Žanr</th>
                <th>Ocena</th>
                <th>Naslovnica</th>
                <th>Povezava</th>  @* NOVO *@
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            <!-- JavaScript bo dodal vrstice -->
        </tbody>
    </table>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
        }

    /* DARK MODE ZA CELOTNO STRAN */
    body.dark-mode {
        background-color: #121212 !important;
        color: #f5f5f5 !important;
    }

        body.dark-mode .card {
            background-color: #1e1e1e !important;
            color: #f5f5f5 !important;
        }

        body.dark-mode .table {
            background-color: #1e1e1e !important;
            color: #f5f5f5 !important;
        }

        body.dark-mode .form-control,
        body.dark-mode .form-select {
            background-color: #333 !important;
            color: #f5f5f5 !important;
            border-color: #555 !important;
        }

        /* ✅ DARK MODE za komentarje */
        body.dark-mode .list-group-item {
            background-color: #1e1e1e !important;
            color: #f5f5f5 !important;
            border-color: #333 !important;
        }
</style>
<!-- NOVO: modal za podrobni pogled igre -->
<div class="modal fade" id="gameDetailsModal" tabindex="-1" aria-labelledby="gameDetailsLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="gameDetailsLabel">Podrobnosti igre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zapri"></button>
            </div>
            <div class="modal-body">
                <p><strong>Naslov:</strong> <span id="detailsTitle"></span></p>
                <p><strong>Žanr:</strong> <span id="detailsGenre"></span></p>
                <p><strong>Ocena:</strong> <span id="detailsRating"></span></p>
                <p>
                    <strong>Povezava:</strong>
                    <a id="detailsWebsite" href="#" target="_blank">Odpri stran</a>
                    <span id="detailsWebsiteNone" class="text-muted" style="display:none;">Ni dodane povezave.</span>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // ========= ELEMENTI =========
            const themeToggleBtn = document.getElementById("themeToggle");
            const gameForm = document.getElementById("gameForm");
            const gameTitleInput = document.getElementById("gameTitle");
            const gameGenreInput = document.getElementById("gameGenre");
            const gameRatingInput = document.getElementById("gameRating");
             const gameWebsiteInput = document.getElementById("gameWebsite"); // NOVO
             const gameCoverInput = document.getElementById("gameCover"); // NOVO (slika)
            const sortSelect = document.getElementById("sortSelect");
            const gamesTableBody = document.querySelector("#gamesTable tbody");
        if (!gameForm || !themeToggleBtn || !gamesTableBody) {
                       // Če elementi ne obstajajo, ne delamo nič
                       return;
                   }

            // ========= DARK MODE =========
            function loadTheme() {
                const saved = localStorage.getItem("theme");
                if (saved === "dark") {
                    document.body.classList.add("dark-mode");
                } else {
                    document.body.classList.remove("dark-mode");
                }
            }

            if (themeToggleBtn) {
                themeToggleBtn.addEventListener("click", function () {
                    document.body.classList.toggle("dark-mode");
                    const isDark = document.body.classList.contains("dark-mode");
                    localStorage.setItem("theme", isDark ? "dark" : "light");
                });
            }

            // ========= OSEBNI SEZNAM IGER =========
            let games = [];

            function loadGames() {
                const data = localStorage.getItem("personalGames");
                if (data) {
                    games = JSON.parse(data);
                } else {
                    games = [];
                }
            }

            function saveGames() {
                localStorage.setItem("personalGames", JSON.stringify(games));
            }
        // NOVO: funkcija za odprtje podrobnosti
                    function openDetails(game) {
                        document.getElementById("detailsTitle").textContent = game.title;
                        document.getElementById("detailsGenre").textContent = game.genre || "/";
                        document.getElementById("detailsRating").textContent = game.rating != null ? game.rating : "/";

                        const linkEl = document.getElementById("detailsWebsite");
                        const noneEl = document.getElementById("detailsWebsiteNone");

                        if (game.website) {
                            linkEl.href = game.website;
                            linkEl.style.display = "inline";
                            noneEl.style.display = "none";
                        } else {
                            linkEl.href = "#";
                            linkEl.style.display = "none";
                            noneEl.style.display = "inline";
                        }

                        if (window.bootstrap) {
                            const modalEl = document.getElementById("gameDetailsModal");
                            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
                            modal.show();
                        } else {
                            alert(
                                `Naslov: ${game.title}\nŽanr: ${game.genre}\nOcena: ${game.rating ?? ""}\nPovezava: ${game.website ?? ""}`
                            );
                        }
                    }

            function renderGames() {
                if (!gamesTableBody || !sortSelect) return;

                gamesTableBody.innerHTML = "";

                let sorted = [...games];
                const sortBy = sortSelect.value;

                if (sortBy === "title") {
                    sorted.sort((a, b) => a.title.localeCompare(b.title));
                } else if (sortBy === "rating") {
                    sorted.sort((a, b) => (b.rating ?? 0) - (a.rating ?? 0)).reverse();
                }

                sorted.forEach(game => {
                    const tr = document.createElement("tr");

                    const tdTitle = document.createElement("td");
                    tdTitle.textContent = game.title;
                    tr.appendChild(tdTitle);

                    const tdGenre = document.createElement("td");
                    tdGenre.textContent = game.genre || "";
                    tr.appendChild(tdGenre);

                    const tdRating = document.createElement("td");
                    tdRating.textContent = game.rating != null ? game.rating : "";
                    tr.appendChild(tdRating);
                            // NOVO: stolpec Naslovnica
        const tdCover = document.createElement("td");

        if (game.coverDataUrl) {
            const img = document.createElement("img");
            img.src = game.coverDataUrl;
            img.alt = "Naslovnica";
            img.style.width = "60px";
            img.style.height = "60px";
            img.style.objectFit = "cover";
            img.style.borderRadius = "6px";
            tdCover.appendChild(img);
        } else {
            tdCover.innerHTML = '<span class="text-muted">Ni slike</span>';
        }

        tr.appendChild(tdCover);

        // NOVO: stolpec Povezava
                           const tdWebsite = document.createElement("td");
                           if (game.website) {
                               const a = document.createElement("a");
                               a.href = game.website;
                               a.target = "_blank";
                               a.textContent = "Odpri";
                               tdWebsite.appendChild(a);
                           } else {
                               tdWebsite.innerHTML = '<span class="text-muted">Ni povezave</span>';
                           }
                           tr.appendChild(tdWebsite);

                    const tdActions = document.createElement("td");

                    // NOVO: gumb Podrobnosti
                    const detailsBtn = document.createElement("button");
                    detailsBtn.className = "btn btn-sm btn-outline-secondary me-2";
                    detailsBtn.textContent = "Podrobnosti";
                    detailsBtn.addEventListener("click", function () {
                        openDetails(game);
                    });
                    tdActions.appendChild(detailsBtn);

                    const deleteBtn = document.createElement("button");
                    deleteBtn.className = "btn btn-sm btn-danger";
                    deleteBtn.textContent = "Izbriši";
                    deleteBtn.addEventListener("click", function () {
                        games = games.filter(g => g.id !== game.id);
                        saveGames();
                        renderGames();
                    });
                    tdActions.appendChild(deleteBtn);

                    tr.appendChild(tdActions);

                    gamesTableBody.appendChild(tr);
                });
            }

            if (gameForm) {
                        gameForm.addEventListener("submit", function (e) {
            e.preventDefault();

            const title = gameTitleInput.value.trim();
            if (!title) return;

            const genre = gameGenreInput.value.trim();
            const ratingStr = gameRatingInput.value;
            const rating = ratingStr ? parseInt(ratingStr, 10) : null;
            const website = gameWebsiteInput.value.trim(); // že imaš

            const file = gameCoverInput ? gameCoverInput.files[0] : null;

            // Funkcija, ki dejansko doda igro (z ali brez slike)
            function addGame(coverDataUrl) {
                const newGame = {
                    id: Date.now(),
                    title: title,
                    genre: genre,
                    rating: rating,
                    website: website,
                    coverDataUrl: coverDataUrl || null // NOVO
                };

                games.push(newGame);
                saveGames();
                renderGames();

                // reset
                gameTitleInput.value = "";
                gameGenreInput.value = "";
                gameRatingInput.value = "";
                if (gameWebsiteInput) gameWebsiteInput.value = "";
                if (gameCoverInput) gameCoverInput.value = "";
            }

            // Če ni slike, dodamo takoj
            if (!file) {
                addGame(null);
                return;
            }

            // Preberemo sliko v base64 (DataURL) in shranimo v localStorage
            const reader = new FileReader();
            reader.onload = function () {
                addGame(reader.result);
            };
            reader.onerror = function () {
                // če faila, dodamo brez slike
                addGame(null);
            };
            reader.readAsDataURL(file);
        });

            }

            // ========= ✅ KOMENTARJI (GameList-14) =========
            function commentsKey(gameId) {
                return "game_comments_" + gameId;
            }

            function loadComments(gameId) {
                const raw = localStorage.getItem(commentsKey(gameId));
                if (!raw) return [];
                try { return JSON.parse(raw); } catch { return []; }
            }

            function saveComments(gameId, comments) {
                localStorage.setItem(commentsKey(gameId), JSON.stringify(comments));
            }

            function renderComments(gameId) {
                const list = document.getElementById("comment-list-" + gameId);
                if (!list) return;

                list.innerHTML = "";
                const comments = loadComments(gameId);

                if (comments.length === 0) {
                    const empty = document.createElement("li");
                    empty.className = "list-group-item text-muted";
                    empty.textContent = "Ni komentarjev.";
                    list.appendChild(empty);
                    return;
                }

                comments.forEach(c => {
                    const li = document.createElement("li");
                    li.className = "list-group-item d-flex justify-content-between align-items-start gap-2";

                    const left = document.createElement("div");
                    left.className = "flex-grow-1";

                    const text = document.createElement("div");
                    text.textContent = c.text;
                    left.appendChild(text);

                    const meta = document.createElement("small");
                    meta.className = "text-muted";
                    meta.textContent = c.createdAt ? new Date(c.createdAt).toLocaleString() : "";
                    left.appendChild(meta);

                    const del = document.createElement("button");
                    del.type = "button";
                    del.className = "btn btn-sm btn-outline-danger";
                    del.textContent = "Izbriši";
                    del.dataset.gameId = gameId;
                    del.dataset.commentId = c.id;

                    li.appendChild(left);
                    li.appendChild(del);
                    list.appendChild(li);
                });
            }

            // Event delegation: toggle / add / delete
            document.addEventListener("click", function (e) {
                const t = e.target;

                // Toggle panel
                if (t.classList && t.classList.contains("comment-toggle")) {
                    const gameId = t.dataset.gameId;
                    const panel = document.getElementById("comment-panel-" + gameId);
                    if (!panel) return;

                    const isHidden = panel.style.display === "none" || panel.style.display === "";
                    panel.style.display = isHidden ? "block" : "none";

                    if (isHidden) {
                        renderComments(gameId);
                    }
                    return;
                }

                // Add comment
                if (t.classList && t.classList.contains("comment-add")) {
                    const gameId = t.dataset.gameId;
                    const panel = document.getElementById("comment-panel-" + gameId);
                    if (!panel) return;

                    const input = panel.querySelector(".comment-input");
                    if (!input) return;

                    const text = input.value.trim();
                    if (!text) return;

                    const comments = loadComments(gameId);
                    comments.push({
                        id: Date.now().toString(),
                        text: text,
                        createdAt: new Date().toISOString()
                    });
                    saveComments(gameId, comments);

                    input.value = "";
                    renderComments(gameId);
                    return;
                }

                // Delete comment
                if (t.tagName === "BUTTON" && t.dataset && t.dataset.commentId) {
                    const gameId = t.dataset.gameId;
                    const commentId = t.dataset.commentId;

                    let comments = loadComments(gameId);
                    comments = comments.filter(c => c.id !== commentId);
                    saveComments(gameId, comments);
                    renderComments(gameId);
                    return;
                }
            });

            // INIT
            loadTheme();
            loadGames();
            renderGames();
        });
    </script>
}
