@page
@model PravilenProjekt.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong> Uspeh!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 mb-2"> Katalog Videoiger</h1>
            <p class="lead text-muted">Pregled vseh razpoložljivih iger</p>
        </div>
    </div>
    <!-- Search Bar -->
        <form method="get" class="mb-3">
            <div class="input-group input-group-lg">
                <span class="input-group-text">
                    🔍
                </span>
                <input type="text" 
                       name="SearchQuery" 
                       value="@Model.SearchQuery" 
                       class="form-control" 
                       placeholder="Išči igre po naslovu..." 
                       aria-label="Search games">
                <button type="submit" class="btn btn-primary">
                    Išči
                </button>
            @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
            {
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    ❌ Počisti
                </a>
            }
        </div>
    </form>

    <!-- Search Results Info -->
    @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
    {
        <div class="alert alert-info" role="alert">
            <strong>🔍 Rezultati iskanja za:</strong> "@Model.SearchQuery"
            <span class="badge bg-primary">@Model.Games.Count najdenih</span>
        </div>
    }

    @if (!Model.Games.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <h4>😕 Ni rezultatov</h4>
            <p>Ni najdenih iger za iskalni niz "@Model.SearchQuery".</p>
            <a asp-page="./Index" class="btn btn-primary">Prikaži vse igre</a>
        </div>
    }
</div>
</div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var game in Model.Games)
        {
            <div class="col">
                <div class="card h-100 shadow-sm hover-card">
                    <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 300px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@game.Title</h5>
                            <span class="badge bg-warning text-dark">
                                ⭐ @game.Rating
                            </span>
                        </div>

                        <p class="text-muted mb-2">
                            <small>
                                <span class="badge bg-secondary me-1">@game.Genre</span>
                                <span class="badge bg-info">@game.Platform</span>
                            </small>
                        </p>

                        <p class="text-muted mb-3">
                            <small>Leto: @game.ReleaseYear</small>
                        </p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h4 mb-0 text-primary">
                                    €@game.Price.ToString("F2")
                                </span>
                                <a asp-page="./Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning">
                                    ✏️ Uredi
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<hr />

<!-- MOJ OSEBNI SEZNAM IGER + SORT + DARK MODE -->
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Moj osebni seznam iger</h2>
        <button id="themeToggle" class="btn btn-outline-secondary">
            Preklopi temo (dark / light)
        </button>
    </div>

    <!-- Forma za dodajanje igre -->
    <form id="gameForm" class="mb-4">
        <div class="row g-2">
            <div class="col-md-4">
                <label class="form-label">Naslov</label>
                <input type="text" id="gameTitle" class="form-control" required />
            </div>
            <div class="col-md-4">
                <label class="form-label">Žanr</label>
                <input type="text" id="gameGenre" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Ocena (1–10)</label>
                <input type="number" id="gameRating" class="form-control" min="1" max="10" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Dodaj igro</button>
            </div>
        </div>
    </form>

    <!-- Razvrščanje -->
    <div class="mb-3">
        <label class="form-label">Razvrsti po:</label>
        <select id="sortSelect" class="form-select w-auto">
            <option value="none">Brez razvrščanja</option>
            <option value="title">Naslov</option>
            <option value="rating">Ocena</option>
        </select>
    </div>

    <!-- Tabela iger -->
    <table id="gamesTable" class="table table-striped">
        <thead>
            <tr>
                <th>Naslov</th>
                <th>Žanr</th>
                <th>Ocena</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            <!-- JavaScript bo dodal vrstice -->
        </tbody>
    </table>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }

    /* DARK MODE ZA CELOTNO STRAN */
    body.dark-mode {
        background-color: #121212 !important;
        color: #f5f5f5 !important;
    }

    body.dark-mode .card {
        background-color: #1e1e1e !important;
        color: #f5f5f5 !important;
    }

    body.dark-mode .table {
        background-color: #1e1e1e !important;
        color: #f5f5f5 !important;
    }

    body.dark-mode .form-control,
    body.dark-mode .form-select {
        background-color: #333 !important;
        color: #f5f5f5 !important;
        border-color: #555 !important;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // ========= ELEMENTI =========
            const themeToggleBtn = document.getElementById("themeToggle");
            const gameForm = document.getElementById("gameForm");
            const gameTitleInput = document.getElementById("gameTitle");
            const gameGenreInput = document.getElementById("gameGenre");
            const gameRatingInput = document.getElementById("gameRating");
            const sortSelect = document.getElementById("sortSelect");
            const gamesTableBody = document.querySelector("#gamesTable tbody");

            if (!gameForm || !themeToggleBtn || !gamesTableBody) {
                // Če elementi ne obstajajo, ne delamo nič
                return;
            }

            // ========= DARK MODE =========
            function loadTheme() {
                const saved = localStorage.getItem("theme");
                if (saved === "dark") {
                    document.body.classList.add("dark-mode");
                } else {
                    document.body.classList.remove("dark-mode");
                }
            }

            themeToggleBtn.addEventListener("click", function () {
                document.body.classList.toggle("dark-mode");
                const isDark = document.body.classList.contains("dark-mode");
                localStorage.setItem("theme", isDark ? "dark" : "light");
            });

            // ========= OSEBNI SEZNAM IGER =========
            let games = [];

            function loadGames() {
                const data = localStorage.getItem("personalGames");
                if (data) {
                    games = JSON.parse(data);
                } else {
                    games = [];
                }
            }

            function saveGames() {
                localStorage.setItem("personalGames", JSON.stringify(games));
            }

            function renderGames() {
                gamesTableBody.innerHTML = "";

                let sorted = [...games];
                const sortBy = sortSelect.value;

                if (sortBy === "title") {
                    sorted.sort((a, b) => a.title.localeCompare(b.title));
                } else if (sortBy === "rating") {
                    sorted.sort((a, b) => (b.rating ?? 0) - (a.rating ?? 0)).reverse();
                }

                sorted.forEach(game => {
                    const tr = document.createElement("tr");

                    const tdTitle = document.createElement("td");
                    tdTitle.textContent = game.title;
                    tr.appendChild(tdTitle);

                    const tdGenre = document.createElement("td");
                    tdGenre.textContent = game.genre || "";
                    tr.appendChild(tdGenre);

                    const tdRating = document.createElement("td");
                    tdRating.textContent = game.rating != null ? game.rating : "";
                    tr.appendChild(tdRating);

                    const tdActions = document.createElement("td");
                    const deleteBtn = document.createElement("button");
                    deleteBtn.className = "btn btn-sm btn-danger";
                    deleteBtn.textContent = "Izbriši";
                    deleteBtn.addEventListener("click", function () {
                        games = games.filter(g => g.id !== game.id);
                        saveGames();
                        renderGames();
                    });
                    tdActions.appendChild(deleteBtn);
                    tr.appendChild(tdActions);

                    gamesTableBody.appendChild(tr);
                });
            }

            gameForm.addEventListener("submit", function (e) {
                e.preventDefault();

                const title = gameTitleInput.value.trim();
                if (!title) return;

                const genre = gameGenreInput.value.trim();
                const ratingStr = gameRatingInput.value;
                const rating = ratingStr ? parseInt(ratingStr, 10) : null;

                const newGame = {
                    id: Date.now(),
                    title: title,
                    genre: genre,
                    rating: rating
                };

                games.push(newGame);
                saveGames();
                renderGames();

                gameTitleInput.value = "";
                gameGenreInput.value = "";
                gameRatingInput.value = "";
            });

            sortSelect.addEventListener("change", function () {
                renderGames();
            });

            // INIT
            loadTheme();
            loadGames();
            renderGames();
        });
    </script>
}
